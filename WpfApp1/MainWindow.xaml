<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Список заявок партнеров" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FFFFFFFF"
        Loaded="Window_Loaded" Icon="/Новые технологии.png">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель заголовка с логотипом -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#BBDCFA">
            <TextBlock Text="Заявки партнеров" FontFamily="Bahnschrift Light SemiCondensed" 
                       FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Foreground="#0C4882"/>
        </StackPanel>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#FFFFFFFF" Padding="20">
            <ItemsControl x:Name="PartnerRequestsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#0C4882" BorderThickness="1" CornerRadius="8" 
                                Margin="0,0,0,15" Background="#FFFFFFFF"
                                MouseEnter="Card_MouseEnter" 
                                MouseLeave="Card_MouseLeave" 
                                PreviewMouseLeftButtonDown="Card_PreviewMouseLeftButtonDown"
                                Cursor="Hand"
                                Tag="{Binding RequestID}">

                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="2" Opacity="0.1" BlurRadius="5"/>
                            </Border.Effect>

                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding PartnerInfo}" 
                                               FontFamily="Bahnschrift Light SemiCondensed" 
                                               FontWeight="Bold" FontSize="16" 
                                               Foreground="#0C4882"/>

                                    <TextBlock Text="{Binding DirectorName}" 
                                               FontFamily="Bahnschrift Light SemiCondensed" 
                                               FontSize="13" Margin="0,5,0,0" 
                                               Foreground="#0C4882"/>

                                    <TextBlock Text="{Binding LegalAddress}" 
                                               FontFamily="Bahnschrift Light SemiCondensed" 
                                               FontSize="12" Margin="0,3,0,0" 
                                               Foreground="#0C4882"/>

                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBlock Text="{Binding Phone}" 
                                                   FontFamily="Bahnschrift Light SemiCondensed" 
                                                   FontSize="12" Foreground="#0C4882"/>
                                        <TextBlock Text=" • " 
                                                   FontFamily="Bahnschrift Light SemiCondensed" 
                                                   FontSize="12" Foreground="#0C4882"/>
                                        <TextBlock Text="{Binding Email}" 
                                                   FontFamily="Bahnschrift Light SemiCondensed" 
                                                   FontSize="12" Foreground="#0C4882"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="Рейтинг: " 
                                                   FontFamily="Bahnschrift Light SemiCondensed" 
                                                   FontSize="12" Foreground="#0C4882"/>
                                        <TextBlock Text="{Binding Rating}" 
                                                   FontFamily="Bahnschrift Light SemiCondensed" 
                                                   FontSize="12" FontWeight="Bold" 
                                                   Foreground="#0C4882"/>

                                        <TextBlock Text=" • " 
                                                   FontFamily="Bahnschrift Light SemiCondensed" 
                                                   FontSize="12" Foreground="#0C4882"/>
                                        <TextBlock Text="{Binding Status}" 
                                                   FontFamily="Bahnschrift Light SemiCondensed" 
                                                   FontSize="12" 
                                                   Foreground="#0C4882"/>

                                        <TextBlock Text=" • " 
                                                   FontFamily="Bahnschrift Light SemiCondensed" 
                                                   FontSize="12" Foreground="#0C4882"/>
                                        <TextBlock Text="{Binding ItemsCount, StringFormat={}Товаров: {0}}" 
                                                   FontFamily="Bahnschrift Light SemiCondensed" 
                                                   FontSize="12" Foreground="#0C4882"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding TotalAmount, StringFormat={}₽ {0:N2}}" 
                                               FontFamily="Bahnschrift Light SemiCondensed" 
                                               FontWeight="Bold" FontSize="18" 
                                               Foreground="#0C4882" 
                                               HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding RequestDate, StringFormat={}Дата: {0:dd.MM.yyyy}}" 
                                               FontFamily="Bahnschrift Light SemiCondensed" 
                                               FontSize="11" Margin="0,3,0,0" 
                                               Foreground="#0C4882" 
                                               HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Панель кнопок -->
        <Border Grid.Row="2" Background="#BBDCFA" BorderBrush="#0C4882" BorderThickness="0,1,0,0" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="AddRequestButton" Content="Добавить заявку" 
                        Background="#0C4882" Foreground="#FFFFFF" FontFamily="Bahnschrift Light SemiCondensed"
                        Padding="20,8" BorderThickness="0" FontSize="14" FontWeight="SemiBold"
                        Click="AddRequestButton_Click" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>